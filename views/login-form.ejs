<html lang="en">
 
<%- include('./partials/head.ejs') %>


<body>
    <%- include('./partials/navbar') %>

    
    
   <div class="new-message content">

    <% if (locals.user) {%>
        <h1>WELCOME BACK <%= user.username %><span style="font-size: 1.2rem;padding-left: 15px;">You are already login</span></h1>
        <div>
            <a href="/log-out">LOG OUT</a>
            <a href="/">CONTINUE</a>
        </div>
      
      <% } else { %>
        <h1>please log in</h1>
        <form action="/log-in" method="POST" autocomplete="off" novalidate>
            <% if (locals.errors) {  %>
                <p><%= errors %></p>
            <%  } %>
        
            <label for="username">Username: </label>
            <input type="text" id="username" name="username" autocomplete="on" required>
            <label for="user_password">Enter Password: </label>
            <input type="password" id="user_password" name="password" autocomplete="off" required>
            
            <button>Submit</button>
        </form>
        <%}%>

    </div> 

    <%- include('./partials/footer.ejs') %>
</body>

</html>